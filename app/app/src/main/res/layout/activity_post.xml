<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/post_toolbar"
        app:contentInsetStart="0dp"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="发布商品"
            android:textSize="@dimen/custom_sp_24"
            android:textColor="@color/colorWhite"
            />

    </android.support.v7.widget.Toolbar>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/album_dp_10"
            android:text="商品名称"
            android:textSize="@dimen/album_sp_20"
            android:textColor="@color/colorBlack"
            android:id="@+id/post_name_t"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/album_dp_10"
            android:layout_toRightOf="@+id/post_name_t"
            android:id="@+id/post_name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/album_dp_10"
            android:layout_below="@+id/post_name_t"
            android:text="商品类型"
            android:textSize="@dimen/album_sp_20"
            android:textColor="@color/colorBlack"
            android:id="@+id/post_spinner_t"
            />

        <android.support.v7.widget.AppCompatSpinner
            android:layout_width="@dimen/custom_dp_200"
            android:layout_height="wrap_content"
            android:id="@+id/post_spinner"
            android:layout_alignTop="@+id/post_spinner_t"
            android:layout_toEndOf="@+id/post_spinner_t"
            android:entries="@array/category"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/album_dp_10"
            android:layout_below="@id/post_spinner_t"
            android:id="@+id/post_info_t"
            android:text="商品描述"
            android:textSize="@dimen/album_sp_20"
            android:textColor="@color/colorBlack"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_dp_100"
            android:layout_margin="@dimen/album_dp_10"
            android:layout_toRightOf="@+id/post_info_t"
            android:layout_alignTop="@+id/post_info_t"
            android:gravity="top"
            android:id="@+id/post_info"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/album_dp_10"
            android:layout_below="@+id/post_info"
            android:id="@+id/post_tag_t"
            android:text="商品标签"
            android:textSize="@dimen/album_sp_20"
            android:textColor="@color/colorBlack"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/custom_dp_10"
            android:layout_toRightOf="@+id/post_tag_t"
            android:layout_alignTop="@+id/post_tag_t"
            android:gravity="top"
            android:id="@+id/post_tag"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/album_dp_10"
            android:layout_below="@+id/post_tag"
            android:id="@+id/post_price_t"
            android:text="商品价格"
            android:textSize="@dimen/album_sp_20"
            android:textColor="@color/colorBlack"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/custom_dp_10"
            android:layout_toRightOf="@+id/post_price_t"
            android:layout_alignTop="@+id/post_price_t"
            android:gravity="top"
            android:id="@+id/post_price"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/album_dp_10"
            android:layout_alignParentBottom="true"
            android:id="@+id/addPicture_postNew"
            android:text="添加图片"
            android:textColor="@color/colorWhite"
            android:background="@drawable/corner_button"
            />

    </RelativeLayout>


</LinearLayout>