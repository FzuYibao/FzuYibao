<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:id="@+id/collect_image"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/collect_name"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="五年高考三年模拟"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <com.maple27.fzuyibao.view.custom_view.CircleImageView
            android:id="@+id/collect_avatar"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/custom_dp_10"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/collect_username"
            android:layout_toEndOf="@+id/collect_avatar"
            android:layout_alignTop="@id/collect_avatar"
            android:layout_marginStart="@dimen/custom_dp_10"
            android:textSize="20sp"
            android:text="麻瓜一号"
            android:textColor="@color/colorPrimary"
            android:maxLines="1"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/collect_avatar"
            android:layout_marginBottom="@dimen/custom_dp_10"
            android:text="￥ 53"
            android:id="@+id/collect_price"
            android:textSize="22sp" />
        <ImageView
            android:focusable="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/custom_dp_10"
            android:src="@drawable/collect2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/collect_collect" />

    </RelativeLayout>




</LinearLayout>
