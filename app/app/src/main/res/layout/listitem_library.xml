<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="horizontal"
    >
    <ImageView
        android:layout_width="0dp"
        android:src="@mipmap/ic_launcher"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/album_dp_10"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="追风筝的人"
            android:maxLines="1"
            android:textSize="@dimen/custom_sp_24"
            android:layout_marginLeft="@dimen/custom_dp_10"
            android:paddingTop="@dimen/custom_dp_10"
            />

        <TextView
            android:id="@+id/book_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已租借"
            android:textSize="@dimen/custom_sp_18"
            android:layout_alignParentRight="true"
            android:paddingTop="15dp"
            android:paddingRight="@dimen/album_dp_10"
            />

        <TextView
            android:id="@+id/donator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/custom_sp_16"
            android:text="捐赠者"
            android:layout_below="@+id/book_name"
            android:paddingLeft="@dimen/album_dp_10"
            android:paddingTop="@dimen/custom_dp_10"
            />

        //一个圆型的头像图片，暂由ImageView代替
        <ImageView
            android:id="@+id/donator_image"
            android:layout_toRightOf="@id/donator"
            android:layout_below="@id/book_name"
            android:paddingLeft="@dimen/custom_dp_10"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="麻瓜一号"
            android:maxLines="1"
            android:textSize="@dimen/custom_sp_16"
            android:layout_alignBaseline="@+id/donator"
            android:layout_alignBottom="@+id/donator"
            android:layout_toEndOf="@+id/donator_image"
            />

        <TextView
            android:id="@+id/rent_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="租借次数："
            android:textSize="@dimen/album_sp_16"
            android:layout_below="@+id/donator"
            android:paddingLeft="@dimen/album_dp_10"
            android:paddingTop="@dimen/album_dp_10"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="@dimen/custom_sp_16"
            android:layout_toRightOf="@+id/rent_time"
            android:layout_below="@+id/donator"
            android:paddingTop="@dimen/album_dp_10"
            />

        <TextView
            android:id="@+id/DeathLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到期时间："
            android:textSize="@dimen/custom_sp_16"
            android:paddingLeft="@dimen/album_dp_10"
            android:layout_below="@id/rent_time"
            android:paddingTop="@dimen/album_dp_10"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-11-10"
            android:maxLines="1"
            android:textSize="@dimen/custom_sp_16"
            android:layout_toRightOf="@+id/DeathLine"
            android:layout_below="@+id/rent_time"
            android:paddingTop="@dimen/album_dp_10"
            />

    </RelativeLayout>

</LinearLayout>









