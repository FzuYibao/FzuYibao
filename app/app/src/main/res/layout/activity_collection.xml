<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/merchandise"
        android:layout_width="140dp"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:id="@+id/sss"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/collect_name"
            android:layout_marginTop="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="五年高考三年模拟"
            android:textSize="22sp"/>

        <ImageView
            android:src="@drawable/p2"
            android:id="@+id/userHeadView"
            android:layout_below="@+id/collect_name"
            android:layout_marginTop="50dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/userName"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/collect_name"
            android:layout_toRightOf="@+id/userHeadView"
            android:textSize="20sp"
            android:text="麻瓜一号"
            android:paddingTop="10dp"
            android:maxLines="1"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/Collect_YesOrNot"
            android:text="￥ 53"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/Collect_YesOrNot"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/collect_name"
            android:src="@drawable/collect1" />

    </RelativeLayout>




</LinearLayout>
