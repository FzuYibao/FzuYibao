<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/pn_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="发布需求"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/custom_sp_24" />

    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/custom_dp_20"
            android:layout_marginTop="@dimen/custom_dp_20"
            android:layout_marginEnd="@dimen/custom_dp_20"
            android:text="需求描述"
            android:textSize="@dimen/custom_sp_20"
            android:textColor="@color/colorBlack"
            android:id="@+id/pn_info_t"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_dp_150"
            android:layout_margin="@dimen/custom_dp_20"
            android:layout_below="@id/pn_info_t"
            android:layout_alignTop="@+id/donate_name_t"
            android:id="@+id/pn_info"
            />



