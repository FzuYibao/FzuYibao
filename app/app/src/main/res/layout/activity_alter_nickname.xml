<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"

    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_dp_20"/>
    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:paddingLeft="@dimen/custom_dp_20"
            android:text="Lost"
            android:textSize="22sp"
            android:id="@+id/altet_new_nickname"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/custom_dp_50" />
        <ImageView
            android:id="@+id/delete_text"
            android:layout_width="@dimen/custom_dp_30"
            android:layout_height="@dimen/custom_dp_30"
            android:layout_marginRight="@dimen/custom_dp_10"
            android:layout_gravity="center"
            android:src="@drawable/delete_text"/>


    </LinearLayout>



    <Button
        android:id="@+id/alter_commit"
        android:layout_width="@dimen/custom_dp_100"
        android:layout_height="@dimen/custom_dp_40"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="@dimen/custom_dp_20"
        android:background="@color/colorWhite"
        android:text="чбо  шод"
        android:textSize="20sp"/>

    <View
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

</LinearLayout>
