<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/album_dp_10"
        android:src="@drawable/nav_icon" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TextView
            android:id="@+id/book_name"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingLeft="@dimen/custom_dp_5"
            android:paddingTop="@dimen/custom_dp_10"
            android:text="追风筝的人"

            android:textSize="26sp" />

        <TextView
            android:id="@+id/book_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:paddingTop="15dp"
            android:text="已租借"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/custom_dp_20" />

        <TextView
            android:id="@+id/donator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_name"
            android:paddingLeft="@dimen/album_dp_10"
            android:paddingTop="@dimen/custom_dp_10"
            android:text="捐赠者"
            android:textSize="@dimen/custom_dp_20" />

        //一个圆型的头像图片，暂由ImageView代替

        <ImageView
            android:id="@+id/donator_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/book_name"
            android:layout_marginTop="@dimen/album_dp_10"
            android:layout_toRightOf="@id/donator"

            android:paddingLeft="@dimen/custom_dp_5"
            android:src="@drawable/nav_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/donator"
            android:layout_alignBottom="@+id/donator"
            android:layout_toEndOf="@+id/donator_image"
            android:maxLines="1"
            android:paddingLeft="@dimen/custom_dp_5"
            android:text="麻瓜一号"
            android:textSize="@dimen/custom_dp_20" />

        <TextView
            android:id="@+id/rent_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donator"
            android:paddingLeft="@dimen/album_dp_10"
            android:paddingTop="@dimen/album_dp_10"
            android:text="租借次数："
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donator"
            android:layout_toRightOf="@+id/rent_time"
            android:paddingLeft="@dimen/custom_dp_5"
            android:paddingTop="@dimen/album_dp_10"
            android:text="2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/DeathLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rent_time"
            android:paddingLeft="@dimen/album_dp_10"
            android:paddingTop="@dimen/album_dp_10"
            android:text="到期时间："
            android:textSize="@dimen/album_sp_20" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rent_time"
            android:layout_toRightOf="@+id/DeathLine"
            android:maxLines="1"
            android:paddingLeft="@dimen/custom_dp_5"
            android:paddingTop="@dimen/album_dp_10"
            android:text="2017-11-10"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>
